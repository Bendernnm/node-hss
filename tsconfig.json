{
  "compilerOptions": {
    "outDir": "./bin",
    "rootDirs": ["./src", "./tests"],
    "lib": ["esnext"],
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "sourceMap": true,
    "skipLibCheck": true
    // "inlineSourceMap": true,
  },
  "exclude": [
    "node_modules"
  ]
}
